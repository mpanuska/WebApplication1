                        <li data-target="#myCarousel" data-slide-to="2"></li>
                    </ol>

                    <!-- Wrapper for slides -->
                    <div class="carousel-inner">
                        <div class="item active">
                            <img src="/Content/Images/boxer.jpg" alt="Boxer">
                            <div class="carousel-caption">
                                <h3>Get Fit</h3>
                                <p>Boxing is a fun way to get in shape!</p>
                            </div>
                        </div>

                        <div class="item">
                            <img src="/Content/Images/pads.jpg" alt="Chicago">
                            <div class="carousel-caption">
                                <h3>Padwork</h3>
                                <p>Work the pads one on one with a coach</p>
                            </div>
                        </div>

                        <div class="item">
                            <img src="/Content/Images/heavybag.jpg" alt="Heavy Bag">
                            <div class="carousel-caption">
                                <h3>Heavy Bag</h3>
                                <p>Workout solo training on the heavy bag</p>
                            </div>
                        </div>
                    </div>

                    <!-- Left and right controls -->
                    <a class="left carousel-control" href="#myCarousel" data-slide="prev">
                        <span class="glyphicon glyphicon-chevron-left"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="right carousel-control" href="#myCarousel" data-slide="next">
                        <span class="glyphicon glyphicon-chevron-right"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>
            </div>
        </div>


        <div class="col-md-6">
